{
"schemaVersion": 2,
"services": [
  {
    "name": "chronoframe",
    "isMain": true,
    "image": "ghcr.io/hoshinosuzumi/chronoframe:latest",
    "environment": [
      {
         "key": "CFRAME_ADMIN_EMAIL",
         "value": "paki@pacbidou.ovh"
       },
      {
        "key": "CFRAME_ADMIN_PASSWORD",
         "value": "Pepize129"
      },
      {
        "key": "NUXT_PUBLIC_MAP_PROVIDER",
        "value": "maplibre"
      },
      {
        "key": "NUXT_STORAGE_PROVIDER",
        "value": "local"
      },
      {
        "key": "NUXT_PROVIDER_LOCAL_PATH",
        "value": "${APP_DATA_DIR}/data/chronoframe"
      },
      {
        "key": "NUXT_SESSION_PASSWORD",
        "value": "$(openssl rand -base64 32)"
      }
    ],
    "internalPort": 3000,
    "volumes": [
      {
        "hostPath": "${APP_DATA_DIR}/data/chronoframe",
        "containerPath": "/app/data",
        "readOnly": false,
        "shared": false,
        "private": false
      }
    ]
  }
]
}
